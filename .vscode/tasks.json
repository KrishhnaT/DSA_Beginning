{
     "version": "2.0.0",
     "tasks": [
         {
             "label": "g++ build and run",
             "type": "shell",
             "command": "g++",
             "args": [
                 "-g", "${file}", "-o", "${fileDirname}/${fileBasenameNoExtension}",
                 ";", "chmod +x ${fileDirname}/${fileBasenameNoExtension}",
                 ";", "./${fileDirname}/${fileBasenameNoExtension}"
             ],
             "group": {
                 "kind": "build",
                 "isDefault": true
             },
             "problemMatcher": ["$gcc"]
         }
     ]
 }